<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".doctor.Home">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/singin_top"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="#0099CC"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="MyDoctor"
        android:textColor="?attr/colorOnPrimaryFixed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        tools:targetApi="s" />

    <ImageView
        android:id="@+id/Notifications"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp"
        app:srcCompat="@drawable/baseline_notifications_24" />


    <ImageView
        android:id="@+id/Messages"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/baseline_message_24" />

    <SearchView
        android:id="@+id/idSV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="77dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:iconifiedByDefault="false"
        android:padding="4dp"
        android:queryHint="Search by Doctor or Specialization"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@drawable/search" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:text="Specialist"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D"/>


    <Button
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        android:text="Medical Officer"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:text="Clinical Officer"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:text="Ms. Nurse"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D" />


    <Button
        android:id="@+id/btn5"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="380dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:text="Ms. Physio"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:text="Psychologist"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D"/>
    <Button
        android:id="@+id/btn7"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginTop="510dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:text="Nutritionist"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/Button5"
        android:backgroundTint="#21005D" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:background="#0099CC"
        app:menu="@menu/bottom_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>